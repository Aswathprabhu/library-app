<h2 style="color:#ffffff">List of Available Books</h2>

{{#if isloading}}
<h1 class="text-center text-info">Loading... Please Wait...</h1>
{{else}}
{{#each model as |library|}}
<div class="col-md-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">{{library.name}}</h3>
    </div>
    <div class="panel-body">
      <p>Released Year: {{library.releasedyear}}</p>
      <p>Author: {{library.author}}</p>
      <p>No of Books:{{library.noofbooks}}</p>
    </div>
    <div class="panel-footer text-right">
       <button class="btn btn-sm btn-success" {{action 'book' library }} disabled={{library.check}}>Book</button>
    </div>
  </div>
</div>
{{/each}}
{{/if}}
