{{#if progress}}
 {{partial 'loading'}}
{{else}}
<form class="form-horizontal outline" {{action "login" on="submit"}}>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-5 control-label">Email</label>
    <div class="col-sm-3">
      {{input type="email" class="form-control" id="inputEmail3"  value=email required=true}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-5 control-label">Password</label>
    <div class="col-sm-3">
      {{input type="password" class="form-control" id="inputPassword3"  value=password required=true}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-10">
      <button type="submit" class="btn btn-success">Log in</button>
      {{#link-to 'signup'}}<button class="btn btn-primary">Sign Up</button>{{/link-to}}
    </div>
  </div>
</form>
{{/if}}
